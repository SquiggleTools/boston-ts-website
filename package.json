		"@vanilla-extract/css": "^1.14.1",
		"@vercel/remix": "^2.8.1",
		"clsx": "^2.1.0",
		"isbot": "5",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@remix-run/dev": "^2.8.0",
		"@types/eslint": "^8.56.2",
