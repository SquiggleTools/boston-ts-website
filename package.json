		"sentences-per-line": "^0.2.1",
		"typescript": "^5.3.3",
		"vite": "^5.1.5",
		"vite-tsconfig-paths": "^4.3.1",
		"yaml-eslint-parser": "^1.2.2"
	},
	"packageManager": "pnpm@9.1.2",
	"engines": {
		"node": ">=18"
	},
	"publishConfig": {
		"provenance": true
	}
}
